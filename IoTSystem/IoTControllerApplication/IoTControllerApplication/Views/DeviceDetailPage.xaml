<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IoTControllerApplication.Views.DeviceDetailPage"
             Title="{Binding Title}">
    <ListView x:Name="AttributesListView" ItemsSource="{Binding Device.Attributes}">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding Label}" Detail="{Binding Value}"/>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>
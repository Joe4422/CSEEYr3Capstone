                           HorizontalOptions="CenterAndExpand"/>
        <TableView x:Name="PropertiesTableView">
            <TableRoot>
                <TableSection>

                </TableSection>
                </TableRoot>
        </TableView>
    </StackLayout>

</ContentPage>